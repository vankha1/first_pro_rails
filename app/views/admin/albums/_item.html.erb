<div
    class="d-flex col-md-3 align-content-start my-1"
>
    <div
        class="card bg-dark text-white border-0"
        style="max-width: 250px; height: 250px"
    >
        <div class="photo_container">
            <img
                src="<%= album.photos.first&.image_url.present? ? album.photos&.first.image_url : asset_path('default_photo.jpg') %>"
                class="img-fluid"
                style="object-fit: cover"
                alt="Photo image"
            />
            <img
                src="<%= album.photos.first&.image_url.present? ? album.photos&.first.image_url : asset_path('default_photo.jpg') %>"
                class="img-fluid"
                style="object-fit: cover"
                alt="Photo image"
            />
            <img
                src="<%= album.photos.first&.image_url.present? ? album.photos&.first.image_url : asset_path('default_photo.jpg') %>"
                class="img-fluid"
                style="object-fit: cover"
                alt="Photo image"
            />
        </div>
        <div
            class="card-img-overlay d-flex align-items-center px-2"
            style="background-color: rgba(0, 0, 0, 0.3); height: 20%; width: 100%; justify-content: space-between; z-index: 10"
        >
            <p class="text-truncate m-0">
                <%= album.description %>
            </p>
            <%= link_to edit_album_path(album.id) do %>
                <i class="fa-regular fa-pen-to-square p-1" style="font-size: 20px; color: white"></i>
            <% end %>
        </div> 
    </div>
</div>