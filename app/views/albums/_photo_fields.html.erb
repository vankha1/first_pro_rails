<div class='nested-fields'>
    <label class="card text-white border-1 p-0 mt-4 mb-5 d-flex justify-content-center align-items-center text-decoration-none" style="width: 200px;
                                height: 200px;
                                background-color: #f2f2f2;
                                border-style: dashed;
                                border-radius: 0.5rem;
                                cursor: pointer;">
        <% if f.object %>
            <img
                src="<%= f.object.image_url.present? ? f.object.image_url : asset_path('default_photo.jpg') %>"
                class=""
                style="
                    width: 100%;
                    height: 255px;
                    border-radius: 0.5rem;
                    object-fit: cover;
                    cursor: pointer;
                "
                id="card-img"
            >
        <% end %>
        <%= f.file_field(:image_url, class: "d-none", id: "files_inputs") %>
        <%= link_to_remove_association raw('
                <i
                    class="fa-solid fa-xmark"
                    style="
                        position: absolute;
                        top: 2px;
                        right: 10px;
                        font-size: 1.5rem;
                        color: #4f4f4f;
                        cursor: pointer;
                        -webkit-text-stroke: 3px #4f4f4f;
                    "
                ></i>'), f, id: "remove_photo_btn" %>
    </label>
</div>


