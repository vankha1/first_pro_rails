<%= stylesheet_link_tag 'photos/index'%>
<% provide(:title, "Feeds") %>
<main id="main" class="row m-0">
    <%= render "layouts/sidebar" %>

    <!-- Main content -->
    <div class="container_ col-12 col-md-8 m-md-0 justify-content-none">
        <div class="btn-group mb-3" role="group" aria-label="Basic example">
            <button type="button" class="btn active_">PHOTO</button>
            <button type="button" class="btn">ALBUM</button>
        </div>

        <div
            class="feeds_container d-flex flex-wrap flex-column flex-md-row"
            style="gap: 20px"
        >
            <% @photos.each do |photo| %>
                <div class="card col-lg-5">
                    <div class="row g-0">
                        <div class="col-lg-6">
                        <div class="photo_container">
                            <img
                            src="<%= photo.image_url %>"
                            class="img-fluid h-100"
                            alt="photo"
                            />
                        </div>
                        </div>
                        <div class="col-lg-6">
                        <div class="post_user_info">
                            <div class="default_avatar">
                            <span class="username_short">HN</span>
                            </div>
                            <span class="user_name">Hieu Nguyen</span>
                        </div>

                        <div class="card-body" style="padding: 0.8rem">
                            <h5 class="card-title"><%= photo.title %></h5>
                            <p class="card-text"><%= photo.description %></p>
                            <div class="post_createdAt">
                            <i class="fa fa-heart" style="color: var(--main_color)"
                                >&nbsp;<span><%= photo.number_like %></span></i
                            >
                            <small class="text-body-secondary"
                                ><%= photo.created_at %></small
                            >
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <!-- Pagination -->
        <nav aria-label="">
            <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item active">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
            </ul>
        </nav>
    </div>

    <div class="col-2"></div>
</main>