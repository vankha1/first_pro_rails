<div
    class="modal fade"
    id="<%= photo.id %>"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">
                    <%= photo.title %>
                </h1>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <img
                    src="<%= photo.image_url %>"
                    class="img-fluid w-100"
                    style="object-fit: contain; height: 400px; margin-bottom: 1.5rem"
                    alt=""
                />
                <p>
                    <%= photo.description %>
                </p>
            </div>
        </div> 
    </div>
</div>